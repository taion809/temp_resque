{% extends 'base.twig' %}
{% block title %} New Job! {% endblock %}
{% block content %}
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Job</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    {% if job|length > 0 %}
        {% if job['status'] == 'running' %}
        <tr class='active'>
        {% elseif job['status'] == 'complete' %}
        <tr class='success'>
        {% elseif job['status'] == 'failed' %}
        <tr class='danger'>
        {% else %}
        <tr>
        {% endif %}
          <td>{{ job['job_id'] }}</td>
          <td>{{ job['status'] }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="2">Invalid Job!</td>
        </tr>
    {% endif %}
  </tbody>
</table>
{% endblock %}