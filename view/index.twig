{% extends 'base.twig' %}
{% block title %} Home! {% endblock %}
{% block content %}
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>ID</th>
      <th>Job</th>
      <th>Greeted</th>
      <th>Status</th>
      <th>View</th>
    </tr>
  </thead>
  <tbody>
    {% if jobs|length > 0 %}
        {% for job in jobs %}
        {% if job['status'] == "complete" %}
        <tr class="success">
        {% else %}
        <tr>
        {% endif %}
          <td>{{ job['id'] }}</td>
          <td>{{ job['job_id'] }}</td>
          <td>{{ job['name'] }}</td>
          <td>{{ job['status'] }}</td>          
          <td><a class="btn btn-mini btn-info" href="/job/{{ job['job_id'] }}">Status</td>
        </tr>
        {% endfor %}
    {% else %}
        <tr>
            <td colspan="4">No Jobs!</td>
        </tr>
    {% endif %}
  </tbody>
</table> 
{% endblock %}